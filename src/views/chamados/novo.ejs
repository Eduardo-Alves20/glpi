<section class="portal-usuario">
  <header class="portal-usuario__header">
    <h1>Abrir chamado</h1>
    <p>Formulário inicial para registro de solicitação.</p>
  </header>

  <form class="panel form-grid" action="#" method="post">
    <label>
      Título
      <input type="text" name="titulo" placeholder="Ex.: Problema de acesso ao sistema" disabled />
    </label>

    <label>
      Categoria
      <select name="categoria" disabled>
        <option>Selecione (em breve)</option>
      </select>
    </label>

    <label class="full">
      Descrição
      <textarea name="descricao" rows="5" placeholder="Descreva o problema" disabled></textarea>
    </label>

    <button class="portal-btn portal-btn--disabled" type="button" disabled>
      Integração em andamento
    </button>
  </form>
</section>
