<div class="content-with-pagination-wrapper">
  <div class="content-with-pagination">

    <%- include('../partials/breadcrumb', {
      crumbs: [
        { label: 'Home', href: '/app' },
        { label: 'Técnico' },
        { label: 'Meus chamados' }
      ]
    }) %>

    <div class="page-head">
      <div>
        <h1 class="page-title">Meus chamados</h1>
        <p class="page-subtitle">Chamados atualmente atribuídos a você.</p>

        <% if (typeof erroGeral !== 'undefined' && erroGeral) { %>
          <div class="alert-error"><%= erroGeral %></div>
        <% } %>
      </div>
    </div>

    <% if (typeof flash !== "undefined" && flash) { %>
      <script>
        window.__FLASH__ = <%- JSON.stringify({
          tipo: String(flash.tipo || "info").toLowerCase(),
          mensagem: String(flash.mensagem || "").slice(0, 300)
        }) %>;
      </script>
    <% } %>

    <div class="table-card">
      <table class="table">
        <thead>
          <tr>
            <th style="width:70px;">#</th>
            <th>Título</th>
            <th style="width:140px;">Categoria</th>
            <th style="width:140px;">Prioridade</th>
            <th style="width:160px;">Solicitante</th>
            <th style="width:140px;">Status</th>
            <th style="width:190px;">Atualizado</th>
            <th style="width:120px;">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% if (!chamados || chamados.length === 0) { %>
            <tr><td colspan="8" class="empty-row">Você ainda não possui chamados atribuídos.</td></tr>
          <% } else { %>
            <% chamados.forEach((c) => { %>
              <tr>
                <td><p class="table-content"><%= c.numero %></p></td>
                <td><p class="table-content"><a href="/tecnico/chamados/<%= c.id %>"><%= c.titulo %></a></p></td>
                <td><p class="table-content"><span class="pill pill-muted"><%= c.categoria %></span></p></td>
                <td><p class="table-content"><span class="pill pill-prio pill-prio-<%= String(c.prioridade).toLowerCase() %>"><%= c.prioridade %></span></p></td>
                <td><p class="table-content"><%= c.solicitante %></p></td>
                <td><p class="table-content"><span class="pill pill-status pill-status-<%= String(c.status).toLowerCase() %>"><%= c.status %></span></p></td>
                <td><p class="table-content"><%= c.quando %></p></td>
                <td><a class="btn-primary" href="/tecnico/chamados/<%= c.id %>">Abrir</a></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

  </div>
</div>

<script type="module" src="/js/tecnico-live.js"></script>
